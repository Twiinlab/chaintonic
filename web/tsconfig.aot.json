{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./src",
    "outDir": "dist-aot",
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "types": [
    "es6",
    "node"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "config",
    "dist-aot",
    "src/**/*.e2e.ts",
    "src/**/*.spec.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": true
  }
}
